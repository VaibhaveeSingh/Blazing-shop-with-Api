@model BlazingShop.Models.ViewModel.NewCategoryViewModel
@{
    ViewBag.Title = "Edit"; 
    }

<h2>Create Product</h2>
@using (Html.BeginForm("Save", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()
    <div class="form-control-static">
          @Html.LabelFor(m => m.CId)
          @Html.DropDownListFor(m => m.CId, new SelectList
          (Model.Category, "CId", "CName"), " ", new { @class = "form-row" })
    </div>
    <div class="form-group">
          @Html.LabelFor(m => m.Name)
          @Html.TextBoxFor(m => m.Name, new { @class = "form-row" })
    </div>
    <div class="form-group">
          @Html.LabelFor(m => m.Price)
          @Html.TextBoxFor(m => m.Price, new { @class = "form-row" })
    </div>
    <div class="form-group">
          @Html.LabelFor(m => m.ShadeColour)
          @Html.TextBoxFor(m => m.ShadeColour, new { @class = "form-row" })
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Image, new { @class = "control-label col-md-2" })
        <input type="file" name="ImageData" id="ImageData" @*onchange="fileCheck(this);"*@ />
    </div>
    @Html.HiddenFor(m => m.Id);
    <button type="submit" class="btn btn-primary">Submit</button>
 }


